{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": false,
    "incremental": true,
    "ignoreDeprecations": "5.0"
  },
  "include": ["lib", "bin", "*.ts"],
  "exclude": ["babel__core", "node_modules", "**/*.js", "cdk.out"]
}
